<script src="${base_path}/static/js/jquery-ui.min.js" ></script>
<script>
	$("#sm-modules").sortable({
		handle: ".panel-heading",
	});
	$("#sm-modules").disableSelection();
	$("#l5").attr('class','active');
	function up(lvl,uid,td){
		td = $(td).parent().prev()
		$.get('${base_path}/service/updown/'+uid+'-'+lvl,function(data){
			if(lvl == 0){
				td.html('成员');
			}else if(lvl == 1){
				td.html('信息发布员');
			}else{
				td.html('管理员');
			}
		});

	}
	seles = $('select');
	if(seles.length > 0){
		bumen_select = $(seles[0]);
		ops = bumen_select.find('option');
		for(i=0;i<18;i++){
			op = ops[i];
			console.log(op.value +' ' +'${bumen }');
			console.log(op.value == '${bumen }');
			isok = op.value == '${bumen }';
			if(isok){
				op.setAttribute('selected','true');
				break;
			}
		}
	}
